                    <button type="button" class="btn btn-default btn-lg btn-block"
                            data-submit="click"
                            data-action="@(Url.Action("DownloadProductDocument", "Store", new { area = string.Empty, storeSlug = seller.StoreSlug, productId = Model.Product.Id }))"
