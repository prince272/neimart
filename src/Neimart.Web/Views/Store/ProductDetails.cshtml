                            <div class="col-auto position-absolute"><i class="fad fa-download fa-1-3x"></i></div>
                            <div class="col">Download @(Model.Product.Document.MediaType.GetEnumText().ToLowerInvariant()) for free</div>
                        </div>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>