@{
    Html.AddTitle("Review Policy");

    var seller = await Context.GetSellerAsync();
}

@(await Html.PartialAsync("Partials/_StorePageTitle", "Review Policy"))

<div class="card card-condenced mb-4">
    <div class="card-body">
        @if (!string.IsNullOrWhiteSpace(SanitizerHelper.ConvertHtmlToText(seller.ReviewsNote)))
        {
            @Html.Raw(seller.ReviewsNote)
        }
        else
        {
            <div class="d-flex align-items-center justify-content-center text-center p-3 p-md-5 m-3 m-md-5">
                <div class="p-2">
                    <div class="d-inline-block mb-3"><i class="fad fa-sticky-note fa-4x theme-text-dark"></i></div>
                    <h4 class="h5">No review policy</h4>
                </div>
            </div>
        }
    </div>
</div>