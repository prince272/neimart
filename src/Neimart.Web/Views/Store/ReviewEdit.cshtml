@model ReviewEditModel

<form asp-antiforgery="true" class="modal modal-fullscreen">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content" data-valid="@(ViewData.ModelState.IsValid.ToString().ToLowerInvariant())">
            <div class="modal-header">
                <div class="modal-title">
                    <h5 class="h5 mb-1">Review for the Product</h5>
                    <span class="text-muted text-small">Write your own review about this product.</span>
                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pb-2">
                <div asp-validation-summary="All" class="alert callout-danger mb-4" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Comment"></label>
                    <textarea class="form-control" rows="8" asp-for="Comment"></textarea>
                    <span asp-validation-for="Comment" class="d-block"></span>
                    <div class="pt-3 text-small"><span class="badge badge-primary">Info</span> <span class="text-muted">Most helpful reviews have 100 words or more.</span></div>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="form-label"></label>
                    <input asp-for="Rating" id="review-rating-input" style="opacity: 0;" data-toggle="rateyo" data-star-width="30px" data-full-star="true" />
                    <span asp-validation-for="Rating"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-submit="modal">Submit</button>
            </div>
            <input asp-for="Id" type="hidden" />
        </div>
    </div>
</form>