@{
    Html.AddTitle("Complete").AddTitle("Checkout");

    var seller = await Context.GetSellerAsync();
    var orderCode = Context.Request.Query["orderCode"];
}

<div class="text-center pt-2 pb-3 my-5">
    <div class="container my-5 pb-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <div class="line-height-1 mb-3" style="font-size: 5rem"><i class="fad fa-check-circle fa-5x text-primary"></i></div>
                <h1 class="h3">Your order <b class="text-primary">@(orderCode)</b> has been placed!</h1>
                <p>Please keep the above code for your reference. We'll contact you shortly. Thank you!</p>
                <div>
                    <a class="btn btn-default" asp-action="Index" asp-controller="Store" asp-area="" asp-route-storeSlug="@(seller.StoreSlug)">Back to Store</a>
                    <span class="mx-2"></span>
                    <a class="btn btn-primary" href="javascript:void(0)"
                       data-submit="click"
                       data-action="@(Url.Action("OrderDetails", "Store", new { area = string.Empty, storeSlug = seller.StoreSlug, orderCode = orderCode }))"
                       data-method="get"
                       data-dialog="modal">View Order</a>
                </div>
            </div>
        </div>
    </div>
</div>