@{
    var theme = await Context.GetThemeAsync();
}

<link rel="apple-touch-icon" sizes="180x180" href="~/assets/apple-touch-icon.png" asp-append-version="true" />
<link rel="icon" type="image/png" sizes="32x32" href="~/assets/favicon-32x32.png" asp-append-version="true" />
<link rel="icon" type="image/png" sizes="192x192" href="~/assets/android-chrome-192x192.png" asp-append-version="true" />
<link rel="icon" type="image/png" sizes="16x16" href="~/assets/favicon-16x16.png" asp-append-version="true" />
<link rel="manifest" href="~/assets/manifest.json" asp-append-version="true" />
<link rel="mask-icon" href="~/assets/safari-pinned-tab.svg" color="#775cdc" asp-append-version="true" />
<link rel="shortcut icon" href="~/assets/favicon.ico" asp-append-version="true" />
<meta name="apple-mobile-web-app-title" content="Neimart" />
<meta name="application-name" content="Neimart" />
<meta name="msapplication-TileColor" content="#775cdc" />
<meta name="msapplication-TileImage" content="@(Url.Content("~/assets/mstile-144x144.png"))" />
<meta name="msapplication-config" content="@(Url.Content("~/assets/browserconfig.xml"))" />
<meta name="theme-color" content="#ffffff" />

@*
    <!-- Chrome, Firefox OS and Opera -->
    <meta name="theme-color" content="@(theme.StyleColor)" />
    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content="@(theme.StyleColor)" />
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="@(theme.StyleColor)" />
*@
