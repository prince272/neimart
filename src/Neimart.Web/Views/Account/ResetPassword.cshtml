@model ResetPasswordModel
@{
    Html.AddTitle("Reset Password");
}

    <form asp-action="ResetPassword" asp-controller="Account" asp-area=""
          asp-route-token="@Context.Request.Query["token"]"
          asp-route-email="@Context.Request.Query["email"]"
          asp-route-returnUrl="@Context.Request.Query["returnUrl"]">
        <div class="card mb-4 mx-md-5">
            <div class="card-body pb-2">
                <div class="card-title d-flex align-items-center justify-content-between mb-4">
                    <h1 class="h4 mb-0">Reset Password</h1>
                </div>
                <div class="mb-3">
                    <span>Enter your new password and confirm it by entering it again then click on reset password.</span>
                </div>
                <div asp-validation-summary="ModelOnly" class="alert callout-danger mb-3" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Reset password</button>
                </div>
                <div class="form-group">
                    <a asp-action="Signin" asp-controller="Account" asp-area="" asp-route-returnUrl="@(Context.Request.Query["returnUrl"])" class="btn btn-default btn-block">Return to sign in</a>
                </div>
            </div>
        </div>
    </form>