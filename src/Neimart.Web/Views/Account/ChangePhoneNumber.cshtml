@model ChangePhoneNumberModel

<form asp-antiforgery="true" class="modal modal-fullscreen">
    <div class="modal-dialog modal-dialog-scrollable modal-sm">
        <div class="modal-content" data-valid="@(ViewData.ModelState.IsValid.ToString().ToLowerInvariant())">
            <div class="modal-header">
                <div class="modal-title">
                    <h5 class="h5 mb-0">New phone number</h5>
                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="overflow-y: inherit;">
                <div asp-validation-summary="All" class="alert callout-danger mb-4" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="form-group">
                    <label asp-for="NewPhoneNumber" class="form-label"></label>
                    <input asp-for="NewPhoneNumber" type="tel" class="form-control" data-toggle="intltel" data-country-code="@(AppSettings.Value.CountryCode)" />
                    <span asp-validation-for="NewPhoneNumber"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-submit="modal">Submit</button>
            </div>
        </div>
    </div>
</form>